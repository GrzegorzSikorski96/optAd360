{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ site.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ site.name }}</td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>
                {% for tag in site.tags %}
                    <span class="badge badge-primary">{{ tag.name }}</span>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ site.url }}</td>
        </tr>
        <tr>
            <th>Actions</th>
            <td>
                <div class="row">
                    <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-sm text-info">
                        <i class="fas fa-edit"></i>
                    </a>

                {{ include('site/_delete_form.html.twig') }}</td>
            </div>
        </tr>
        </tbody>
    </table>

    <h1>Statistics</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Revenue</th>
            <th>Impression</th>
            <th>eCPM</th>
            <th>Clicks</th>
            <th>CTR</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>

        {% for row in site.statistics %}
            <tr>
                <td>{{ row.revenue }}</td>
                <td>{{ row.impression }}</td>
                <td>{{ row.ecpm }}</td>
                <td>{{ row.clicks }}</td>
                <td>{{ row.ctr }}</td>
                <td>{{ row.date|date("m/d/Y") }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}
