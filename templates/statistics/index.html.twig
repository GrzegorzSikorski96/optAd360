{% extends 'base.html.twig' %}

{% block title %}Statistics index{% endblock %}

{% block body %}
    <h1>Statistics index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Revenue</th>
                <th>Impression</th>
                <th>Ecpm</th>
                <th>Clicks</th>
                <th>Ctr</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statistic in statistics %}
            <tr>
                <td>{{ statistic.id }}</td>
                <td>{{ statistic.date ? statistic.date|date('Y-m-d') : '' }}</td>
                <td>{{ statistic.revenue }}</td>
                <td>{{ statistic.impression }}</td>
                <td>{{ statistic.ecpm }}</td>
                <td>{{ statistic.clicks }}</td>
                <td>{{ statistic.ctr }}</td>
                <td>
                    <a href="{{ path('statistics_show', {'id': statistic.id}) }}">show</a>
                    <a href="{{ path('statistics_edit', {'id': statistic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('statistics_new') }}">Create new</a>
{% endblock %}
