{% extends 'base.html.twig' %}

{% block title %}Statistics{% endblock %}

{% block body %}
    <h1>Statistics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ statistic.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ statistic.date ? statistic.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Revenue</th>
                <td>{{ statistic.revenue }}</td>
            </tr>
            <tr>
                <th>Impression</th>
                <td>{{ statistic.impression }}</td>
            </tr>
            <tr>
                <th>Ecpm</th>
                <td>{{ statistic.ecpm }}</td>
            </tr>
            <tr>
                <th>Clicks</th>
                <td>{{ statistic.clicks }}</td>
            </tr>
            <tr>
                <th>Ctr</th>
                <td>{{ statistic.ctr }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('statistics_index') }}">back to list</a>

    <a href="{{ path('statistics_edit', {'id': statistic.id}) }}">edit</a>

    {{ include('statistics/_delete_form.html.twig') }}
{% endblock %}
